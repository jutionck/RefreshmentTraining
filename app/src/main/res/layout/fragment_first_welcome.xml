<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/firstWelcomeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customBackground"
    tools:context=".welcome.FirstWelcomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/firstWelcomeLinearLayout"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstWelcomeMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Selamat Datang"
                android:gravity="center"
                android:textColor="@color/customBlack"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/firstWelcomeImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/login_bg"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/firstWelcomeIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/customText"
                android:text="Semoga harimu \nmenyenangkan"
                android:gravity="center"
                android:textSize="22sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/firstWelcomeButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="100dp"
                android:text="MULAI"
                android:textColor="@color/customWhite"
                android:backgroundTint="@color/customButton"
                app:cornerRadius="10dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>